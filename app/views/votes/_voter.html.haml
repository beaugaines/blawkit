          - if can? :create, Vote
  %section.voter
    %p Vote!:
    %li
      %i= link_to " ", topic_post_up_vote_path(topic, post), class: "fi-plus #{current_user.voted(post) && current_user.voted(post).up_vote? ? 'voted' : ''}"
    %li
      %i= link_to " ", topic_post_down_vote_path(topic, post), class: "fi-minus #{current_user.voted(post) && current_user.voted(post).down_vote? ? 'voted' : ''}"
