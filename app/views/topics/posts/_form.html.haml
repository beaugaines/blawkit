= form_for [@topic, @post], html: {'data-abide' => ''} do |f|
  %div 
    = f.label :title
    %br/ 
    = f.text_field :title, class: 'medium-text-field', required: true
    %small.error Title can't be blank
  %div 
    = f.label :body
    %br/ 
    = f.text_area :body, size: '30x10', class: 'medium-text-box', required: true
    %small.error Body can't be blank
  %div 
    =f.label :image
    %br/ 
    = f.file_field :image, class: 'small radius secondary button'
    /= f.hidden_field :image_cache
  %div 
    =f.label :audiofile
    %br/ 
    = f.file_field :audiofile, class: 'small radius secondary button'
  %div
    = f.submit 'Save', class: 'medium radius secondary button'

